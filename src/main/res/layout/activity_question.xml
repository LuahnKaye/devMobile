        <!-- Pergunta 10 -->
        <TextView
            android:id="@+id/tvQuestion10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10. Você é honesto em suas relações pessoais?"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/rgQuestion10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbQ10A1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sempre" />

            <RadioButton
                android:id="@+id/rbQ10A2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Na maioria das vezes" />

            <RadioButton
                android:id="@+id/rbQ10A3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Às vezes" />

            <RadioButton
                android:id="@+id/rbQ10A4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raramente" />
        </RadioGroup>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:text="Enviar"></Button>
        <!--            android:backgroundTint="@color/button_color"-->
        <!--            android:textColor="@android:color/white"/>-->
