<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF8F8"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Pergunta 1 -->
        <TextView
            android:id="@+id/tvQuestion1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Você olha pra mulher dos outros?"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/rgQuestion1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbQ1A1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sempre" />

            <RadioButton
                android:id="@+id/rbQ1A2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Respeito a minha esposa" />

            <RadioButton
                android:id="@+id/rbQ1A3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nem tenho" />

            <RadioButton
                android:id="@+id/rbQ1A4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raramente" />
        </RadioGroup>

        <!-- Pergunta 2 -->
        <TextView
            android:id="@+id/tvQuestion2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Você mente para evitar conflitos?"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/rgQuestion2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbQ2A1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nunca" />

            <RadioButton
                android:id="@+id/rbQ2A2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raramente" />

            <RadioButton
                android:id="@+id/rbQ2A3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Às vezes" />

            <RadioButton
                android:id="@+id/rbQ2A4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frequentemente" />
        </RadioGroup>

        <!-- Pergunta 3 -->
        <TextView
            android:id="@+id/tvQuestion3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. Você chaveca a mulher do próximo?"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/rgQuestion3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbQ3A1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sempre" />

            <RadioButton
                android:id="@+id/rbQ3A2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Não tenho coragem" />

            <RadioButton
                android:id="@+id/rbQ3A3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Às vezes" />

            <RadioButton
                android:id="@+id/rbQ3A4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jamais" />
        </RadioGroup>

        <!-- Pergunta 4 -->
        <TextView
            android:id="@+id/tvQuestion4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. Você trairia sua mulher?"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/rgQuestion4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbQ4A1"
