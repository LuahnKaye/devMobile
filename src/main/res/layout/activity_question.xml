            <RadioButton
                android:id="@+id/rbQ4A2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quem sabe" />

            <RadioButton
                android:id="@+id/rbQ4A3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aguas passadas" />

            <RadioButton
                android:id="@+id/rbQ4A4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facilmente" />
        </RadioGroup>

        <!-- Pergunta 5 -->
        <TextView
            android:id="@+id/tvQuestion5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5. Você é leal a sua esposa?"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/rgQuestion5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbQ5A1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sempre" />

            <RadioButton
                android:id="@+id/rbQ5A2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Na maioria das vezes" />

            <RadioButton
                android:id="@+id/rbQ5A3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Até que sim" />

            <RadioButton
                android:id="@+id/rbQ5A4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sou safado" />
        </RadioGroup>

        <!-- Pergunta 6 -->
        <TextView
            android:id="@+id/tvQuestion6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6. Você já contou pra sua mulher com quem você já ficou?"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/rgQuestion6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbQ6A1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nunca" />

            <RadioButton
                android:id="@+id/rbQ6A2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nem quero" />

            <RadioButton
                android:id="@+id/rbQ6A3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Não lembro" />

            <RadioButton
                android:id="@+id/rbQ6A4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muitas histórias" />
        </RadioGroup>

        <!-- Pergunta 7 -->
        <TextView
            android:id="@+id/tvQuestion7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
