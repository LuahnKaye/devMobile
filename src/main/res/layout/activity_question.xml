            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbQ8A1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sempre" />

            <RadioButton
                android:id="@+id/rbQ8A2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Na maioria das vezes" />

            <RadioButton
                android:id="@+id/rbQ8A3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Às vezes" />

            <RadioButton
                android:id="@+id/rbQ8A4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raramente" />
        </RadioGroup>

        <!-- Pergunta 9 -->
        <TextView
            android:id="@+id/tvQuestion9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9. Você se aproveitaria de alguém para alcançar seus objetivos?"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/rgQuestion9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbQ9A1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nunca" />

            <RadioButton
                android:id="@+id/rbQ9A2"
